extends ../layout

block content
  h1= movie.name
  p Description: #{movie.description}
  p Year: #{movie.year}
  p Genres: #{movie.genres}
  p Rating: #{movie.rating}
  p Posted by: #{movie.createdBy ? movie.createdBy.username : "Unknown"}

  if isOwner
    a(href=`/movies/${movie._id}/edit`) Edit
    button#deleteBtn(data-id=movie._id) Delete

  script(src="/js/deleteMovie.js")